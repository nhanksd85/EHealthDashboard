<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.KiosskDashboard.FullscreenContainer"
    tools:context=".FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="@style/Widget.Theme.KiosskDashboard.ButtonBar.Fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dummy_button"
                android:visibility = "gone"/>

        </LinearLayout>
    </FrameLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:focusable="false"
            android:src="@drawable/back6"
            android:scaleType="fitXY"
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.1"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_gravity="left">

                <ImageView
                    android:id="@+id/top_logo"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"                        android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/android_tv_white"
                    android:scaleType="fitCenter"/>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="right"
                    android:layout_marginRight="10dp">


                    <DigitalClock
                        android:visibility="gone"
                        android:id="@+id/digitalClock1"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:textSize="35dp" />

                    <ImageButton
                        android:id="@+id/btnn_allapp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button_allapp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"/>

                    <ImageButton
                        android:id="@+id/btnn_folder"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button_folder"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"/>


                    <ImageButton
                        android:id="@+id/btnn_setting"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/button_setting"
                        android:layout_gravity="center_vertical"

                        android:layout_marginRight="40sp"/>

                    <ImageView
                        android:id="@+id/imgWifiStatus"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_wifi_3"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.8"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3">
                    <WebView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id = "@+id/webContent" >

                    </WebView>
                </LinearLayout>
                <!--layout for widget-->



                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.13"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/transparent">

                    <com.tomerrosenfeld.customanalogclockview.CustomAnalogClock
                        android:id="@+id/analog_clock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:default_watchface="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textDay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/button03"
                            android:text="  Thứ 3"
                            android:textSize="20dp"
                            android:textColor="@color/white" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/textDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/button05"
                                android:text="01"
                                android:textSize="80dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-20dp"/>

                            <TextView
                                android:id="@+id/textMonthYear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/button05"
                                android:text="Tháng 1 - 2019"
                                android:textSize="20dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-20dp"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/textCity"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/buttonbkg"
                            android:text="THỜI TIẾT"
                            android:textSize="25dp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/black_1"
                            android:layout_gravity="center_vertical">
                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:background="@color/black_1">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/imgWeatherIcon"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/open10d"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:background="@color/black_1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textTemperature"
                                    android:textColor="@color/white"
                                    android:text="Nhiệt Độ"
                                    android:textSize="18dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Độ Ẩm"
                                    android:id="@+id/textHumidity"
                                    android:textSize="18dp"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@color/transparent">

                    <TextView
                        android:id="@+id/txtCurrentDate"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="Hồ Chí Minh - 06 tháng 12"
                        android:gravity = "start"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop = "12dp"
                        >
                        <ImageView
                            android:id = "@+id/imgIconMain"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/weather_02" />
                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id = "@+id/txtTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:text="30"
                                android:textColor="#fff"
                                android:textSize="45dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|top"
                                android:layout_marginTop="12dp"
                                android:layout_marginLeft="5dp"
                                android:text="°C"
                                android:textColor="#fff"
                                android:textSize="25dp"
                                android:fontFamily="sans-serif-condensed-light" />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="140dp"
                            android:layout_height="70dp">
                            <TextView
                                android:id = "@+id/txtDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Có mưa vài nơi"
                                android:textColor="#fff"
                                android:layout_marginTop="12dp"
                                android:layout_marginStart="5dp"/>
                            <TextView
                                android:id = "@+id/txtHumidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:text="Độ ẩm 90%"
                                android:layout_marginTop="30dp"
                                android:layout_marginStart="5dp"/>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/T3"
                                android:text="T3"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <ImageView
                                android:id = "@+id/imgT3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/weather_01"/>
                            <TextView
                                android:id = "@+id/txtT3Max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="31°"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <TextView
                                android:id = "@+id/txtT3Min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="26°"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/T4"
                                android:text="T4"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <ImageView
                                android:id = "@+id/imgT4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/weather_07"/>
                            <TextView
                                android:id = "@+id/txtT4Max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="31°"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <TextView
                                android:id = "@+id/txtT4Min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="26°"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/T5"
                                android:text="T5"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <ImageView
                                android:id = "@+id/imgT5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/weather_22"/>
                            <TextView
                                android:id = "@+id/txtT5Max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="32°"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <TextView
                                android:id = "@+id/txtT5Min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="26°"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/T6"
                                android:text="T6"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <ImageView
                                android:id = "@+id/imgT6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/weather_31"/>
                            <TextView
                                android:id = "@+id/txtT6Max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="32°"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />
                            <TextView
                                android:id = "@+id/txtT6Min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="26°"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:fontFamily="sans-serif-condensed-light" />

                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/transparent">

                <HorizontalScrollView
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <LinearLayout
                            android:id="@+id/horizontal_list"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:gravity="center">
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/horizontal_list2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="bottom">
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>



</FrameLayout>